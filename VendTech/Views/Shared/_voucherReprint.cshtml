<script>
    let printerDevice;
    let printerServer;
    let printerService;
    let printerCharacteristic;

    // Function to connect to Bluetooth Printer
    async function connectPrinter() {
        try {
            printerDevice = await navigator.bluetooth.requestDevice({
                acceptAllDevices: true,
                optionalServices: ['000018f0-0000-1000-8000-00805f9b34fb'] // Generic UUID for printers
            });

            printerServer = await printerDevice.gatt.connect();
            printerService = await printerServer.getPrimaryService('000018f0-0000-1000-8000-00805f9b34fb');
            printerCharacteristic = await printerService.getCharacteristic('00002af1-0000-1000-8000-00805f9b34fb');

            alert("✅ Connected to printer!");
        } catch (error) {
            console.error(error);
            alert("❌ Connection failed: " + error);
        }
    }

    // Function to print HTML section
    async function printText() {
        if (!printerCharacteristic) {
            await connectPrinter();
            return;
        }

        let textEncoder = new TextEncoder();

        // Extract data dynamically from HTML elements by their IDs
        let salesDate = document.getElementById("re-sales_date").innerText;
        let vendorName = document.getElementById("re-vendorId").innerText;
        let posId = document.getElementById("re-pos_id").innerText;
        let customerName = document.getElementById("re-customer_name").innerText;
        let customerAccount = document.getElementById("re-customer_account_number").innerText;
        let costOfUnits = document.getElementById("re-cost_of_units").innerText;
        let units = document.getElementById("re-units").innerText;
        let edsaSerial = document.getElementById("re-edsa_serial").innerText;
        let vendtechSerial = document.getElementById("re-vendtech_serial_code").innerText;
        let pin1 = document.getElementById("re-pin1").innerText;
        let pin2 = document.getElementById("re-pin2").innerText;
        let pin3 = document.getElementById("re-pin3").innerText;

        // Generate invoice text using extracted values
        const invoiceText = generateInvoiceText(
            salesDate,
            vendorName,
            posId,
            customerName,
            customerAccount,
            costOfUnits,
            units,
            edsaSerial,
            vendtechSerial,
            pin1,
            pin2,
            pin3
        );

        // Convert text to bytes
        let data = textEncoder.encode(invoiceText);

        // Define the maximum BLE write size (512 bytes)
        const MAX_CHUNK_SIZE = 512;

        try {
            // Send data in chunks
            for (let i = 0; i < data.length; i += MAX_CHUNK_SIZE) {
                let chunk = data.slice(i, i + MAX_CHUNK_SIZE);
                await printerCharacteristic.writeValue(chunk);
                await new Promise(resolve => setTimeout(resolve, 50)); // Small delay to avoid buffer overflow
            }

            alert("✅ Print command sent!");
        } catch (error) {
            console.error(error);
            alert("❌ Failed to print: " + error);
        }
    }
</script>


